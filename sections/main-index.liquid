<div class="index-page">
  <h1>Welcome to Moxie Mart</h1>
  <p>Your one-stop shop for printed T-shirts and dropshipping lifestyle products.</p>

  <div class="hero-section">
    <!-- Placeholder for 3D animation/motion effects -->
    <lottie-player src="https://assets9.lottiefiles.com/packages/lf20_qp1q7cgd.json"  background="transparent"  speed="1"  style="width: 300px; height: 300px;"  loop  autoplay></lottie-player>
    <h2>Discover Your Style</h2>
  </div>

  <div class="featured-collections">
    <h3>Shop Our Collections</h3>
    <!-- Placeholder for collections -->
    <div class="collection-grid">
      <div class="collection-item">
        <img src="https://via.placeholder.com/300x200?text=T-Shirts" alt="T-Shirts">
        <h4>T-Shirts</h4>
      </div>
      <div class="collection-item">
        <img src="https://via.placeholder.com/300x200?text=Dropshipping+Picks" alt="Dropshipping Picks">
        <h4>Dropshipping Picks</h4>
      </div>
    </div>
  </div>

  <div class="featured-products">
    <h3>Featured Products</h3>
    <!-- Placeholder for featured products -->
    <div class="product-grid">
      <div class="product-card">
        <img src="https://via.placeholder.com/200x200?text=Product+1" alt="Product 1">
        <h4>Product 1</h4>
        <p>$25.00</p>
        <button>Quick Add</button>
      </div>
      <div class="product-card">
        <img src="https://via.placeholder.com/200x200?text=Product+2" alt="Product 2">
        <h4>Product 2</h4>
        <p>$30.00</p>
        <button>Quick Add</button>
      </div>
    </div>
  </div>

  <div class="customer-testimonials">
    <h3>What Our Customers Say</h3>
    <!-- Placeholder for testimonials -->
    <div class="testimonial-slider">
      <p>"Amazing quality and unique designs!" - Happy Customer</p>
    </div>
  </div>

  <div class="newsletter-signup">
    <h3>Stay Updated</h3>
    <p>Sign up for our newsletter for exclusive offers.</p>
    <form>
      <input type="email" placeholder="Your email address">
      <button type="submit">Subscribe</button>
    </form>
  </div>
</div>

